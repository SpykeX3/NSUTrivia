<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/gray_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Quiz.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Quiz.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Quiz.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Buttons">
        <item name="android:background">@drawable/buttons_corner</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Buttons.NotActive">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Buttons.Active">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Answer">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:background">@drawable/recycler_view_background</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Task">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:background">@drawable/recycler_view_background</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.NSUTrivia.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Result">
        <item name="android:color">@color/gray_700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Result.Winner">
        <item name="android:color">@color/gray_700</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableRight">@drawable/win_right</item>
        <item name="android:drawableLeft">@drawable/win_left</item>
    </style>
</resources>